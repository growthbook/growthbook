{
  "name": "growthbook-app",
  "repository": "https://github.com/growthbook/growthbook-app.git",
  "private": true,
  "version": "4.2.0",
  "scripts": {
    "lint": "eslint './**/*.{ts,tsx,js,jsx}' --fix --max-warnings 0 --cache --cache-strategy content",
    "lint:ci": "eslint './**/*.{ts,tsx,js,jsx}' --max-warnings 0 --cache --cache-strategy content",
    "pretty": "prettier --write ./**/*.{json,css,scss,md,mdx,js,jsx,ts,tsx}",
    "type-check": "pnpm -r --workspace-concurrency=1 run type-check",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "doc-gen": "cd docs && pnpm install && pnpm gen",
    "unused-export-check": "pnpm -r --workspace-concurrency=1 run unused-export-check",
    "test": "pnpm -r --workspace-concurrency=1 run test",
    "dev:apps": "pnpm --filter back-end --filter front-end --filter shared -r --parallel run dev",
    "dev": ". $(cd packages/stats && poetry env info --path)/bin/activate && pnpm dev:apps",
    "dev:back-end": ". $(cd packages/stats && poetry env info --path)/bin/activate && pnpm --filter back-end run dev",
    "build:deps": "pnpm --filter @growthbook/growthbook --filter @growthbook/growthbook-react --filter shared run build",
    "build:app": "pnpm --filter back-end --filter front-end run build",
    "build": "pnpm build:deps && pnpm build:app",
    "start": "pm2-runtime start ecosystem.config.js",
    "start:with-tracing": "TRACING_PROVIDER=opentelemetry pm2-runtime start ecosystem.config.js",
    "start:with-datadog": "TRACING_PROVIDER=datadog pm2-runtime start ecosystem.config.js",
    "update-stats-deps": ". $(cd packages/stats && poetry env info --path)/bin/activate && (cd packages/stats && poetry install)",
    "setup": "pnpm build:deps & pnpm --filter stats run setup & (cd docs && pnpm install) & wait",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "plop": "plop",
    "migrate-encryption-key": "pnpm --filter back-end migrate-encryption-key",
    "generate-api-types": "pnpm --filter back-end generate-api-types",
    "ci": "pnpm lint:ci && pnpm run type-check && pnpm run test",
    "postinstall": "if command -v poetry >/dev/null 2>&1; then pnpm update-stats-deps; fi",
    "generate-sdk-report": "pnpm --filter shared generate-sdk-report",
    "bump-sdk-version": "pnpm --filter @growthbook/growthbook bump-version"
  },
  "dependencies": {
    "@datadog/native-metrics": "^3.1.1",
    "@datadog/pprof": "^5.13.2",
    "dd-trace": "^5.83.0",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.3.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-import-resolver-typescript": "^4.4.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "growthbook": "^0.2.1",
    "husky": "^7.0.0",
    "lint-staged": "^10.2.7",
    "plop": "^3.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^3.0.2",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "./**/*.{json,css,scss,md,mdx}": [
      "prettier --write"
    ],
    "./**/*.{ts,tsx}": [
      "pnpm eslint --fix --max-warnings 0 --cache --cache-strategy content --prune-suppressions"
    ],
    "./packages/stats/{gbstats,tests}/**/*.py": [
      "pnpm --filter stats lint"
    ]
  },
  "pnpm": {
    "overrides": {
      "@growthbook/growthbook": "1.6.4",
      "vite": "^6.0.0",
      "execa": "^5.0.0",
      "form-data@2": "^2.5.5",
      "form-data@3": "^3.0.4",
      "form-data@4": "^4.0.5",
      "fast-xml-parser@4": "^4.4.1",
      "mdast-util-to-hast@13": "^13.2.1",
      "node-forge@1": "^1.3.2",
      "@grpc/grpc-js@1.8": "1.8.22",
      "@octokit/plugin-paginate-rest@9": "^9.2.2",
      "@octokit/request@8": "^8.4.1",
      "@octokit/request-error@5": "^5.1.1",
      "prismjs@1": "^1.30.0",
      "qs@6": "^6.14.1"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native"
      ]
    },
    "patchedDependencies": {
      "@types/presto-client@1.0.2": "patches/@types__presto-client@1.0.2.patch",
      "presto-client@1.1.0": "patches/presto-client@1.1.0.patch",
      "agenda@5.0.0": "patches/agenda@5.0.0.patch",
      "@ephys/zod-to-ts@2.3.2": "patches/@ephys__zod-to-ts@2.3.2.patch"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "**/*.mdx",
        "options": {
          "embeddedLanguageFormatting": "off"
        }
      }
    ]
  },
  "license": "Mixed",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.0"
}
