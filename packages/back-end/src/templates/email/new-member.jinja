{% extends "base.jinja" %}

{% block preview %}
  {{ name|noHyperlink }} ({{ email }})
{% endblock %}

{% block title %}
  A new user joined {{ organization|noHyperlink }} on GrowthBook
{% endblock %}

{% block top %}
  <p>
    Name: <strong>{{ name|noHyperlink }}</strong><br/>
    Email: <strong>{{ email }}</strong><br/>
  </p>
{% endblock %}

{% block lower %}
  <p>You are receiving this email because you are the owner for the {{ organization|noHyperlink }} organization in GrowthBook.</p>
{% endblock %}
