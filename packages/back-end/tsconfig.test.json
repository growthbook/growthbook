{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "test/**/*", "types/**/*.d.ts", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
