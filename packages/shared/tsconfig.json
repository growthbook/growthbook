{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./src/*", "./types/*"],
      "shared/types/*": ["./types/*"]
    },
    "typeRoots": ["node_modules/@types", "../back-end/typings"],
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "typings.d.ts", "types", "types.js"]
}
