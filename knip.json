{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/front-end": {
      "entry": ["pages/**/*.{ts,tsx}", "vitest.config.js"],
      "project": ["**/*.{ts,tsx}", "**/*.js"]
    },
    "packages/back-end": {
      "entry": [
        "repl.ts",
        "src/server.ts",
        "src/app.ts",
        "src/instrumentation.ts",
        "src/tracing.datadog.ts",
        "src/tracing.opentelemetry.ts",
        "src/scripts/**/*.{ts,mjs}",
        "src/init/**/*.ts",
        "jest.config.js",
        "test/**/*.ts"
      ],
      "project": [
        "repl.ts",
        "src/**/*.ts",
        "types/**/*.d.ts",
        "typings/**/*.d.ts",
        "test/**/*.ts",
        "**/*.mjs"
      ],
      "ignoreBinaries": [
        "concurrently",
        "pino-pretty",
        "ts-node",
        "nodemon",
        "swagger-cli"
      ]
    },
    "packages/shared": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "**/*.d.ts"]
    }
  },
  "includeEntryExports": true,
  "ignoreWorkspaces": [
    "docs",
    "packages/sdk-js",
    "packages/sdk-react",
    "packages/stats"
  ]
}
