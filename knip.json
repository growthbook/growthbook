{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/front-end": {
      "entry": ["pages/**/*.{ts,tsx}", "vitest.config.js", "test/**/*.ts"],
      "ignoreDependencies": [
        "@radix-ui/colors",
        "@dnd-kit/utilities",
        "@radix-ui/react-popover",
        "classnames",
        "@visx/group",
        "@visx/text",
        "d3-scale",
        "@growthbook/growthbook",
        "@sentry/react",
        "jsdom",
        "@vitest/coverage-v8",
        "vite"
      ]
    },
    "packages/back-end": {
      "entry": [
        "repl.ts",
        "src/server.ts",
        "src/app.ts",
        "src/instrumentation.ts",
        "src/tracing.datadog.ts",
        "src/tracing.opentelemetry.ts",
        "src/scripts/**/*.{ts,mjs}",
        "src/init/**/*.ts",
        "jest.config.js",
        "test/**/*.ts",
        "src/controllers/**/*.ts"
      ],
      "paths": { "back-end/*": ["./*"] },
      "ignore": ["src/controllers/**/*.ts", "src/templates/**/*.js"],
      "ignoreDependencies": [
        "bluebird",
        "jose",
        "scim2-parse-filter",
        "generic-pool",
        "@opentelemetry/sdk-node",
        "@opentelemetry/sdk-logs",
        "@opentelemetry/resources",
        "@opentelemetry/semantic-conventions",
        "date-fns-tz"
      ],
      "ignoreBinaries": [
        "concurrently",
        "pino-pretty",
        "ts-node",
        "nodemon",
        "swagger-cli"
      ]
    },
    "packages/shared": {
      "ignore": ["*.d.ts", "*.js"],
      "paths": { "back-end/*": ["../back-end/*"] },
      "ignoreDependencies": ["back-end"]
    }
  },
  "includeEntryExports": true,
  "ignoreWorkspaces": [
    "docs",
    "packages/sdk-js",
    "packages/sdk-react",
    "packages/stats"
  ],
  "ignoreBinaries": ["gen", "typecheck", "rimraf", "poetry", "wait"],
  "ignoreExportsUsedInFile": true
}
